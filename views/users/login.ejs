<% layout('layouts/boilerplates') %>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="row">
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 50px">
                <!-- <div class="card shadow mb-3"> -->
                    <div class="card shadow">
                    <img  class="card-img-top"src="https://res.cloudinary.com/dnsw1mkyu/image/upload/v1701545666/pexels-juan-mendez-1082316_skx41d.jpg" 
                     alt="">
                    <div class="card-body">
                        <h5 class="card-title"> Login</h5>
                        <!-- <h1 class="mb-3">Login</h1> -->
                        <form action="/login" method="post" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" name='username' id="username" autofocus  required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name='password' id="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Login</button>


                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>



    