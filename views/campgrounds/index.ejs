<% layout('./layouts/boilerplates') %>
<div  id="map" style="width: 100%; height: 500px;"></div>
    <body>
        <h1>All Campgrounds</h1>
        <div>
            <a href="/campgrounds/new">Add Camground</a>
        </div>

        <% for(let campground of campgrounds){ %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <% if (campground.images.length){ %>
                        <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                        <% }else{ %>
                            <img  class="img-fluid"  src="https://res.cloudinary.com/dnsw1mkyu/image/upload/v1693089639/YelpCamp/oytkedqylq3ghygvoowb.jpg" alt="">
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id  %>" class="btn btn-primary"> View <%= campground.title  %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>


    </body>
    
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        //We adding s to campground to attatch the whole campgrounds
        const campgrounds  = {features:<%-JSON.stringify(campgrounds)%>} 
        
    </script>
    <script src="/javascripts/clusterMap.js"></script>
    </html>

